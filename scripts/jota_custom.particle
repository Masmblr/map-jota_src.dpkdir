// Airstream
jota_custom_src/sfx_airstream_1
{
	ejector
	{
		particle
		{
			shader sync textures/jota_custom_src/sfx_airstream
			displacement 0 0 0 ~50
			velocityType static
			velocityDir linear
			velocityMagnitude	1000
			velocity -1 0 0 ~20
			accelerationType static
			accelerationDir linear
			acceleration 0 0 1 ~5
			accelerationMagnitude	25
			radius 100 80 0
			alpha 1 0.5 0
			rotation 0 ~360 ~360
			bounce 0
			lifeTime 700
		}
		count infinite
		delay 0
		period 20 - ~0%
  }
}

