jota_custom_src/electric_beam_01
{
	ejector
	{
		particle
		{
			shader sync textures/jota_custom_src/sfx_sprite_04
			displacement 0 0 0 ~8.0
			velocityType static
			velocityDir linear
			velocity 0 0 -1 ~35
			velocityMagnitude 200
			accelerationType static
			accelerationDir linear
			acceleration 0 0 -1 ~25
			accelerationMagnitude 600
			dynamicLight 150 80 25 { 0.2 0.2 1 }
			bounce 0.3
            bounceSound ~1 sounds/jota/electric_02.opus
			radius 35 15 0
			alpha 0.9 0.5 0
